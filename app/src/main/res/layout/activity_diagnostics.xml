<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audio Diagnostics"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvDiagOutputDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Output Device: ..." />

        <TextView
            android:id="@+id/tvDiagSampleRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Rate: ..."
            android:layout_marginTop="8dp"/>
        
        <TextView
            android:id="@+id/tvDiagBufferSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buffer Size: ..."
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\nSystem Effects:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvDiagAgc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AGC Available: ..." />

        <TextView
            android:id="@+id/tvDiagNs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NS Available: ..." />
        
        <TextView
            android:id="@+id/tvDiagAec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AEC Available: ..." />

        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\nLive DSP State:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvDiagPitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detected Pitch: ..." />

    </LinearLayout>
</ScrollView>